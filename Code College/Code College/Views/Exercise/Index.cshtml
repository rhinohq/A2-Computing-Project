@using System.Web.Optimization;
@using Code_College.Models;

@{
    HttpCookie Cookie = Request.Cookies["UserAuth"];

    if (Cookie != null)
    {
        if (!Account.VerifyCookie(Cookie))
        {
            Response.Redirect("/Login");
        }
        else
        {
            ViewBag.Username = Cookie.Values["Username"];
        }
    }
}

