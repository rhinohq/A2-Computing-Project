@using System.Web.Optimization;
@using Code_College.Models;

@{
    HttpCookie Cookie = Request.Cookies["UserAuth"];

    if (Cookie != null)
    {
        if (Account.VerifyCookie(Cookie))
        {
            Response.Redirect("/Dashboard");
        }
    }

    if (IsPost)
    {
        ViewBag.Username = Request.Form["Username"];
        ViewBag.Password = Account.HashCredentials(ViewBag.Username, Request.Form["Password"]);

        if (Account.VerifyUser(ViewBag.Username, ViewBag.Password))
        {
            Account.AddCookie(ViewBag.Username, ViewBag.Password, Response);

            Response.Redirect("~/Dashboard");
        }
    }
}

